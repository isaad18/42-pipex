all	: $(NAME)

clean :
		@echo "\033[0;31m\nDeleting objects🥶..."
		@rm -f $(OBJS)

fclean :
		@echo "\033[0;31m\nDeleting objects🤓..."
		@rm -f $(OBJS)
		@echo "\nDeleting executable pipex🧐..."
		@rm -f $(NAME)

re : fclean all